<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.benwong.buffettman.BuffetDetailActivity"
    tools:showIn="@layout/activity_buffet_detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/nameTV"
        android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/categoryTV"
        android:layout_below="@+id/ratingTV"
         android:layout_alignStart="@+id/ratingTV" android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:minHeight="100dp" android:minWidth="100dp" android:layout_below="@+id/nameTV"
        android:layout_alignParentStart="true" android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/addressTV"
        android:layout_below="@+id/categoryTV" android:layout_alignStart="@+id/categoryTV"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/phoneTV"
        android:layout_below="@+id/addressTV" android:layout_alignStart="@+id/addressTV"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/ratingTV"
        android:textAlignment="center"
        android:layout_below="@+id/nameTV" android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/summaryTV"
        android:layout_below="@+id/imageView" android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" android:layout_marginTop="10dp"/>

